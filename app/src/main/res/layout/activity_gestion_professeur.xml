<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.chefdefiliere.GestionProfesseurActivity">

    <!-- email nom penom telephone role-->

    <EditText
        android:id="@+id/emailPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:hint="Email"
        android:layout_below="@id/textView2"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/nomPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:background="@drawable/input_design"
        android:layout_below="@id/emailPro"
        android:padding="10dp"
        android:hint="Nom"
        android:inputType="text"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/prenomPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:layout_below="@id/nomPro"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:textStyle="bold"
        android:inputType="text"
        android:hint="Prénom"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/telephonePro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/prenomPro"
        android:textStyle="bold"
        android:padding="10dp"
        android:inputType="number"
        android:hint="Téléphone"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/passwordPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/telephonePro"
        android:textStyle="bold"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/confpasswordPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/passwordPro"
        android:padding="10dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/validButProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:layout_below="@id/confpasswordPro"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Valider les modifications" />

    <Button
        android:id="@+id/listButProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons"
        android:layout_below="@id/validButProf"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Consulter la Liste de Professeurs" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Modifier un Professeur" />


</RelativeLayout>